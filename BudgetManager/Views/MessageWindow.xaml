<Window x:Class="BudgetManager.Views.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding TitleMessage}"
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Icon="/Assets/Icons/MessageBoxIcon.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Title -->
            <RowDefinition Height="Auto" />
            <!-- Message -->
            <RowDefinition Height="*" />
            <!-- OK Button -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding TitleMessage}"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"/>

        <!-- Message -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,10">
            <TextBlock Text="{Binding TextMessage}"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       TextWrapping="Wrap"/>
        </ScrollViewer>

        <!-- OK Button -->
        <Button Grid.Row="2"
                Content="OK"
                Style="{StaticResource MaterialDesignRaisedButton}"
                HorizontalAlignment="Center"
                Margin="0,20"
                Click="OkButton_Click"/>
    </Grid>
</Window>
